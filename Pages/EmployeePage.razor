@page "/employeepage"

@if(Employees == null){
    <div class="spinner"></div>
} 
else
{
<h3><b>Daftar Employee</b></h3>
<p>By : Pascalia Girsang</p>

<div class = "card-deck">
    @foreach (var emp in Employees)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30%">
            <div class="card-header">
                <h3>@emp.FirstName @emp.LastName</h3>
            </div>
            <img class="card-img-top img-thumbnail" src="@emp.PhotoPath" />
            <div class="card-footer text-center">
                <a href="@($"employeedetail/{emp.EmployeeId}")" class="btn btn-primary m-1">View</a>
                <a href="@($"editemployee/{emp.EmployeeId}")" class="btn btn-success m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
}